<%# error_messages_for 'user' %>

<div class="box tabular">
  <p>
    <label for="password_template_id"><%=l(:label_pt_template)%><span class="required"> *</span></label>
    <%= select_tag(:passwort_template_id, options_for_select(PasswordTemplate.template_options_for_form,params[:passwort_template_id]),:onchange => "changedPasswordInstanceTemplate(this)") %>
  </p>
  <p>
    <label for="name"><%=l(:label_pt_name)%><span class="required"> *</span></label>
    <%= text_field_tag(:name,"",:disabled => true, :value => params[:name]) %>
  </p>
</div>

<% if @template %>
<script type="text/javascript">
    $(document).ready(function() {
        initPasswordInstanceForm(<%= @template.schema_obj.form_json(params[:data]).html_safe %>)
    });
</script>
<% end %>